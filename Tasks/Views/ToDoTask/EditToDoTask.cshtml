@using Tasks.ViewModels;
﻿
@model ToDoTaskEditViewModel

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Create new Task</h4>
        <form asp-controller="ToDoTask" asp-action="EditToDoTask" method="post" class="needs-validation" >
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <input asp-for="Id" type="text" hidden class="form-control" id="Id" placeholder="" value="@Model.Id" required="">
                <div class="col-sm-6">
                    <label asp-for="Name" >Name Task</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="" value="@Model.Name" required="">
                    <div class="invalid-feedback">
                        Valid name is required.
                    </div>
                </div>                
                <div class="col-sm-12">
                    <label asp-for="Description" >Description</label>
                    <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
                    <div class="invalid-feedback">
                        Valid description is required.
                    </div>
                </div>               
                <hr class="my-4">

                <button class="w-25 btn btn-primary btn-lg" type="submit">Edit Task</button>
            </div>
        </form>
    </div>
</div>